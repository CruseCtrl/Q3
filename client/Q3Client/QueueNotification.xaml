<Window x:Class="Q3Client.QueueNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QueueNotification" Height="64" Width="400" ResizeMode="NoResize"
        ShowInTaskbar="False" Topmost="True" WindowStyle="None" Background="#FFCB5300"
        Left="5" Top="5" AllowsTransparency="True" Focusable="False" ShowActivated="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Label Name="LabelTitle" Grid.Column="0" Grid.Row="0" Foreground="#FFFFFF"></Label>
        
        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ButtonLeave" Grid.Row ="1" Grid.Column="1" Width="80" HorizontalAlignment="Right" Margin="2" Background="#FFD1773A" BorderThickness="0" Content="Leave" Foreground="White" FontWeight="Bold" Click="ButtonLeave_Click"></Button>
            <Button x:Name="ButtonJoin" Grid.Row ="1" Grid.Column="1" Width="80" HorizontalAlignment="Right" Margin="2" Background="#FFD1773A" BorderThickness="0" Content="Join" FontWeight="Bold" Foreground="White" Click="ButtonJoin_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
