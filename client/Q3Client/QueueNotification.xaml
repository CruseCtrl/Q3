<UserControl x:Class="Q3Client.QueueNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="104" Width="500"  Background="#FF16169E"
         Focusable="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="88"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Label Name="LabelTitle" Grid.Column="1" Grid.Row="0" Foreground="#FFFFFF" FontSize="16"></Label>
        
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ButtonLeave" Grid.Row ="1" Grid.Column="1" Width="80" HorizontalAlignment="Right" Margin="2" Background="#FF3737A2" BorderThickness="0" Content="Leave" Foreground="White" Click="ButtonLeave_Click" FontSize="16"/>
            <Button x:Name="ButtonJoin" Grid.Row ="1" Grid.Column="1" Width="80" HorizontalAlignment="Right" Margin="2" Background="#FF3737A2" BorderThickness="0" Content="Join" Foreground="White" Click="ButtonJoin_Click" FontSize="16"/>
        </StackPanel>
        
    </Grid>
</UserControl>
