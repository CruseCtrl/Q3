<Window x:Class="Q3Client.NewQueue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewQueue" Height="Auto" Width="300" Background="{StaticResource BlueBackgroundBrush}" WindowStyle="None" BorderThickness="0" Foreground="White"
        SizeToContent="Height" AllowsTransparency="True">
    <StackPanel>
        <Label Foreground="White" HorizontalContentAlignment="Center" FontSize="20">Start a new queue</Label>
        <TextBox x:Name="QueueName" Padding="10,0" Margin="20,10" FontSize="20" ></TextBox>
        <Button Background="{StaticResource BlueHighlightBrush}" Width="150" Margin="10" IsDefault="True" Click="Button_Click">Start Queue</Button>
    </StackPanel>
</Window>
