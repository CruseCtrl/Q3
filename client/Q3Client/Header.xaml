<UserControl x:Class="Q3Client.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="500" Height="50" Background="{StaticResource BlueBackgroundBrush}">
    <DockPanel>
        <Label DockPanel.Dock="Left" Width="40" Height="50" Background="{StaticResource BlueHighlightBrush}" Margin="5" Foreground="{StaticResource BlueBackgroundBrush}" FontSize="24" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center">Q&#0179;</Label>
        <Button DockPanel.Dock="Right" Margin="10" Width="30" Background="{StaticResource BlueHighlightBrush}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="1,1,1,4">&#9881;</Button>
        <Button DockPanel.Dock="Right" Margin="10,10,0,10" Width="130" Background="{StaticResource BlueHighlightBrush}" Content="New queue" Click="Button_Click"></Button>
        <Label></Label>
            
    </DockPanel>
</UserControl>
