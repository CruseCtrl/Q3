<UserControl x:Class="Q3Client.ChatMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:q3Client="clr-namespace:Q3Client"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="400" Margin="1" Width="400" Height="26" HorizontalAlignment="Right" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="26"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="26"></RowDefinition>
        </Grid.RowDefinitions>

        <Canvas Name="AvatarCanvas" Grid.Column="0" Grid.Row="0" Height="26" Width="26" VerticalAlignment="Center"/>

        <Label Grid.Column="1" Grid.Row="0"  Name="MessageText" Background="#444" Foreground="White" Opacity="0.8" VerticalAlignment="Center" VerticalContentAlignment="Center" Padding="5,2" Margin="5,0"></Label>
    </Grid>
</UserControl>
